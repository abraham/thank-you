<%= render 'shared/tweet', twitter_id: deed.twitter_id, data: deed.data %>

<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
  <h1><%= raw link_tweet_text(deed.display_text) %></h1>
</div>

<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
  <%= render 'links/links', deed: deed, links: deed.links %>
</div>

<% unless @thanked %>
  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
    <%= render 'new_link', deed: deed, thanked: @thanked %>
  </div>
<% end %>

<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
  <% if @thanked %>
  <span>Thanked by you and <%= pluralize(deed.thanks_count - 1, 'other') %></span>
  <% else %>
    <span>Thanked by</span>
  <% end %>
  <%= render 'thanks/thanks', thanks: deed.thanks, more: deed.thanks_count - 10 %>
</div>
