<%= form_for [:thank, @link] do |f| %>
  <%= f.text_field :thank_id, hidden: true, required: true %>

  <p>
    <%= f.label :text %>
    <%= f.text_field :text, placeholder: 'Example', required: true %>
  </p>

  <p>
    <%= f.label :url, 'URL' %>
    <%= f.text_field :url, placeholder: 'https://example.com', required: true, type: :url %>
  </p>

  <p>
    <%= f.submit 'Add link' %>
    <%= link_to 'Cancel', @thank %>
  </p>
<% end %>
