<header>
  <div>
    <h1>Thank You Delivery Alpha</h1>
    <!-- <p>Advocate for Positive Action</p> -->
    <!-- <p>Support acts of good</p> -->
    <!-- <p>Support acts for good</p> -->
    <p>Support positive action</p>
  </div>

  <div class='user-dropdown'>
    <% if current_user %>
      <%= "Hi #{current_user.name}" %>

      <% if current_user.admin? %>
        <%= link_to 'Create thank you', new_thank_path %>
      <% end %>

      <%= render 'sessions/sign-out' %>

    <% elsif !current_page?(controller: :sessions, action: :new) %>
      <%= link_to 'Sign in with Twitter', new_sessions_path %>
    <% end %>
  </div>
</header>
